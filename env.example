# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_TOKEN=your_telegram_token_here

# Database Configuration
# Настройки подключения к PostgreSQL
DB_NAME=schoolbot
DB_USER=schoolbot
DB_PASS=schoolbot
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
# URL для подключения к Redis
REDIS_DSN=redis://redis:6379/0

# Environment
# prod, staging, dev
ENV=prod

# Admin Telegram IDs
# Список ID администраторов через запятую
# Получите свой ID у @userinfobot
ADMIN_IDS=your_admin_id_here

# Monitoring (optional)
# DSN для GlitchTip/Sentry мониторинга
GLITCHTIP_DSN=

# App settings
# Количество дней для хранения данных
KEEP_DAYS=14
